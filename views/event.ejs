<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Your Event Invitation</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <header class="container">
      <h1 class="row justify-content-start">DoodleDoop</h1>
    </header>

    <section class="container content-wrapper">
      <div class="row">
        <h3 class="col-auto text-center">Event Invitation</h3>
        <button class="col-sm-3 btn-lg-err" id="delete-event">Delete Event</button>
      </div>

      <div class="row user-input">
        <input class="col-sm-4" type="text" name="title" placeholder="<%= title%>" id="readonly-input" readonly/>
        <button class="col-auto align-self-end edit-input">Edit</button>
      </div>

      <div class="row user-input">
        <textarea class="col-sm-8" type="text" name="description" rows="3" placeholder="<%= description%>" readonly/></textarea>
        <button class="col-auto align-self-end edit-input" >Edit</button>
      </div>

      <div class="row user-input">
        <input class="col-sm-4" type="text" name="location" placeholder="<%= location%>" readonly/>
        <button class="col-auto align-self-end edit-input">Edit</button>
      </div>

      <%for (let slot in timeslotsGroup) {%>
        <div class="row user-input">
          <input class="col-sm-4" type="text" name="timeslot" placeholder="<%= slot%>" readonly/>
          <button class="col-auto align-self-end edit-input">Edit</button>
          <button class="col-auto align-self-end delete-input">Delete</button>
          <% if ((timeslotsGroup[slot].length === 1) && (timeslotsGroup[slot][0][0] === null)) {%>
            <p class="col-auto align-self-end"><%= 0%> People</p>
          <% } else {%>
            <p class="col-auto align-self-end"><%= timeslotsGroup[slot].length%> People</p>
          <% }%>
        </div>
      <% } %>

      <div class="row">
        <button class="col-auto" id="add-timeslot">Add timeslot &#43;</button>
      </div>

      <div class="row justify-content-end">
        <a class="col-auto align-self-center btn-submit" href="/">Cancel</a>
        <input class="col-auto btn-submit" type="submit" name="submit" values="Save Change" />
      </div>


    </section>
  </body>
</html>
